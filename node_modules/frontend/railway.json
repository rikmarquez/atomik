{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install --legacy-peer-deps && npm run build"
  },
  "deploy": {
    "startCommand": "npx serve -s dist -p 3000",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
}
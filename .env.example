# =============================================================================
# ATOMIC SYSTEMS - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit .env to repository - it contains sensitive information

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Connection (Railway)
DATABASE_URL="postgresql://username:password@host:port/database_name"

# Example for development/testing (replace with actual values):
# DATABASE_URL="postgresql://postgres:myZKEVDbnppIZINvbSEyWWlPRsKQgeDH@trolley.proxy.rlwy.net:31671/atomik"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for token signing (generate a secure random string)
JWT_SECRET="your-super-secret-jwt-key-here"

# JWT Expiration times
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Node Environment
NODE_ENV="development"

# Server Configuration
PORT=3001
FRONTEND_URL="http://localhost:3000"

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# =============================================================================
# EXTERNAL SERVICES (Future)
# =============================================================================
# Email Service (for notifications and password reset)
# EMAIL_SERVICE_API_KEY=""
# EMAIL_FROM_ADDRESS=""

# Redis Cache (when implemented)
# REDIS_URL=""

# File Storage (when implemented)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_S3_BUCKET=""

# =============================================================================
# RAILWAY SPECIFIC (Production)
# =============================================================================
# These are automatically provided by Railway in production
# DATABASE_URL (automatically injected by Railway PostgreSQL service)
# PORT (automatically set by Railway)
# RAILWAY_ENVIRONMENT (automatically set: production, staging, etc.)

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable/disable logging
LOG_LEVEL="debug"

# Enable/disable API documentation (Swagger)
ENABLE_API_DOCS=true